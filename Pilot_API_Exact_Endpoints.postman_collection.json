				{
					"name": "Login - Verify OTP",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Extract token and pilot info on successful login",
									"if (pm.response.code === 200) {",
									"    const responseJson = pm.response.json();",
									"    if (responseJson.success && responseJson.data) {",
									"        const token = responseJson.data.token;",
									"        if (token) {",
									"            pm.environment.set('pilot_token', token);",
									"            console.log('Token saved: ' + token);",
									"        }",
									"        const pilot = responseJson.data.pilot;",
									"        if (pilot && pilot.pilotId) {",
									"            pm.environment.set('pilot_id', pilot.pilotId);",
									"            pm.environment.set('pilot_name', pilot.name);",
									"            console.log('Pilot ID: ' + pilot.pilotId);",
									"        }",
									"    }",
									"}"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
