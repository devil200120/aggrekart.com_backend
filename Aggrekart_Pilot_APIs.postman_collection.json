            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"latitude\": 17.4735,\n  \"longitude\": 78.3773\n}"
            },
            "url": {
              "raw": "{{base_url}}/update-location",
              "host": ["{{base_url}}"],
              "path": ["update-location"]
            }
          }
        }
      ]
