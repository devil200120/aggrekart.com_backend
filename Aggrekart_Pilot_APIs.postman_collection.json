            },
            "url": {
              "raw": "{{base_url}}/start-journey",
              "host": ["{{base_url}}"],
              "path": ["start-journey"]
            }
          }
        },
        {
          "name": "4. Complete Delivery",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderId\": \"{{test_order_id}}\",\n  \"deliveryOTP\": \"716169\",\n  \"deliveryNotes\": \"Package delivered successfully\",\n  \"customerRating\": 5\n}"
            },
            "url": {
              "raw": "{{base_url}}/complete-delivery",
              "host": ["{{base_url}}"],
              "path": ["complete-delivery"]
            }
          }
        },
        {
          "name": "5. Update Location",
          "request": {
            "method": "POST",
