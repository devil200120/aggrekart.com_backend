{
  "info": {
    "name": "Aggrekart Pilot APIs",
    "description": "Complete collection of Pilot APIs for Aggrekart platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api/pilot",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "pilot_phone",
      "value": "9876543210",
      "type": "string"
    },
    {
      "key": "test_order_id",
      "value": "AGK1755273478411UWC",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "üîê Authentication",
      "item": [
        {
          "name": "1. Register Pilot",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Pilot\",\n  \"email\": \"testpilot@example.com\",\n  \"phoneNumber\": \"9876543211\",\n  \"vehicleDetails\": {\n    \"registrationNumber\": \"KA01AB1235\",\n    \"vehicleType\": \"truck\",\n    \"capacity\": 5.0\n  },\n  \"drivingLicense\": {\n    \"number\": \"KA12345679\",\n    \"validTill\": \"2025-12-31\"\n  },\n  \"documents\": {\n    \"license\": \"license-url\",\n    \"rc\": \"rc-url\",\n    \"insurance\": \"insurance-url\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/register",
              "host": ["{{base_url}}"],
              "path": ["register"]
            }
          }
        },
        {
          "name": "2. Request OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phoneNumber\": \"{{pilot_phone}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/login",
              "host": ["{{base_url}}"],
              "path": ["login"]
            }
          }
        },
        {
          "name": "3. Verify OTP & Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.token) {",
                  "        pm.collectionVariables.set('jwt_token', response.data.token);",
                  "        console.log('JWT Token saved:', response.data.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phoneNumber\": \"{{pilot_phone}}\",\n  \"otp\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/login",
              "host": ["{{base_url}}"],
              "path": ["login"]
            }
          }
        }
      ]
    },
    {
      "name": "üì¶ Order Management",
