    {
      "name": "ðŸ” SCAN ORDER - FIXED ADDRESS BUG",
      "item": [
        {
          "name": "âœ… Scan Order QR Code (ADDRESS BUG FIXED)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.order) {",
                  "        const order = response.data.order;",
                  "        console.log('âœ… SCAN ORDER SUCCESS - ADDRESS BUG FIXED!');",
                  "        console.log('='.repeat(50));",
                  "        console.log('ðŸ‘¤ Customer:', order.customer.name);",
                  "        console.log('ðŸ  Customer Address:', order.customer.address);",
                  "        console.log('ðŸ¢ Supplier:', order.supplier.companyName);", 
                  "        console.log('ðŸ­ Supplier Address:', order.supplier.address);",
                  "        console.log('ðŸ“ Pickup Address:', order.deliveryAddress.pickup);",
                  "        console.log('ðŸšš Drop Address:', order.deliveryAddress.drop);",
                  "        console.log('ðŸ’° Total Amount: â‚¹' + order.totalAmount);",
                  "        console.log('ðŸ“¦ Order Status:', order.status);",
                  "        console.log('='.repeat(50));",
                  "        ",
                  "        // Validate the fix",
                  "        const issues = [];",
                  "        if (!order.customer.address || order.customer.address.includes('not available')) {",
                  "            issues.push('âŒ Customer address still missing');",
                  "        }",
                  "        if (!order.supplier.address || order.supplier.address.includes('not available')) {",
                  "            issues.push('âŒ Supplier address still missing');",
                  "        }",
                  "        if (!order.deliveryAddress.pickup || order.deliveryAddress.pickup.includes('not available')) {",
                  "            issues.push('âŒ Pickup address still missing');",
                  "        }",
                  "        if (!order.deliveryAddress.drop || order.deliveryAddress.drop.includes('not available')) {",
                  "            issues.push('âŒ Drop address still missing');",
                  "        }",
                  "        if (!order.totalAmount || order.totalAmount === 0) {",
                  "            issues.push('âŒ Total amount is 0 or missing');",
                  "        }",
                  "        ",
                  "        if (issues.length > 0) {",
                  "            console.log('ðŸš¨ REMAINING ISSUES:');",
                  "            issues.forEach(issue => console.log('   ' + issue));",
                  "        } else {",
                  "            console.log('ðŸŽ‰ ALL ADDRESS FIELDS ARE WORKING CORRECTLY!');",
                  "            console.log('âœ… No more N/A values in mobile app!');",
                  "        }",
                  "        ",
                  "        // Set test assertions",
                  "        pm.test('Customer address is not N/A', function() {",
                  "            pm.expect(order.customer.address).to.not.equal('Address not available');",
                  "            pm.expect(order.customer.address).to.not.equal('N/A');",
                  "        });",
                  "        ",
                  "        pm.test('Supplier address is not N/A', function() {",
                  "            pm.expect(order.supplier.address).to.not.equal('Supplier address not available');",
                  "            pm.expect(order.supplier.address).to.not.equal('N/A');",
                  "        });",
                  "        ",
                  "        pm.test('Total amount is greater than 0', function() {",
                  "            pm.expect(order.totalAmount).to.be.greaterThan(0);",
                  "        });",
                  "    }",
                  "}"
                ]
              }
            }
