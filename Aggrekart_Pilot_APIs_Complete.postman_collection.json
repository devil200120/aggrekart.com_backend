  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Pre-request script to log API calls",
          "console.log('üöÄ Making request to:', pm.request.url.toString());",
          "console.log('üì± Method:', pm.request.method);",
          "",
          "// Check if auth token exists for protected routes",
          "const url = pm.request.url.toString();",
          "const protectedRoutes = ['/scan-order', '/accept-order', '/start-journey', '/complete-delivery', '/update-location', '/dashboard', '/profile', '/stats', '/delivery-history', '/support/contact'];",
          "",
          "const isProtectedRoute = protectedRoutes.some(route => url.includes(route));",
          "if (isProtectedRoute && !pm.environment.get('auth_token')) {",
          "    console.warn('‚ö†Ô∏è  WARNING: This is a protected route but no auth token found. Please login first.');",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Global test script for all requests",
          "pm.test('Response status code should be 2xx', function () {",
          "    pm.expect(pm.response.code).to.be.oneOf([200, 201, 202, 204]);",
          "});",
          "",
          "pm.test('Response should be JSON', function () {",
          "    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
          "});",
          "",
          "pm.test('Response should have success field', function () {",
          "    const jsonData = pm.response.json();",
          "    pm.expect(jsonData).to.have.property('success');",
          "});",
          "",
          "// Log response for debugging",
          "console.log('‚úÖ Response Status:', pm.response.status);",
          "console.log('üì¶ Response Size:', pm.response.responseSize + ' bytes');",
          "console.log('‚è±Ô∏è  Response Time:', pm.response.responseTime + 'ms');"
        ]
      }
    }
  ]
